	<script src="/static/js/jquery.hint.js?@revNum" type="text/javascript"></script>
	<script src="/static/js/jquery.timeago.min.js?@revNum" type="text/javascript"></script>
	
	<script src="/static/js/plugins.js?@revNum"></script>
	<script src="/static/js/script.js?@revNum"></script>

