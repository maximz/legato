	    <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/themes/flick/jquery-ui.css" rel="stylesheet" type="text/css" />

	    @if (false)
	       {
		    <text><script type="text/javascript" src="/static/js/jquery-1.7.1-vsdoc.js"></script></text>
	    }

	    @RenderSection("HeadContent",false)
    </head>

<body>
    <div class="wrap">
        <noscript>
	        <div id="noscript-warning">The Legato Network website works best with JavaScript enabled.</div>
        </noscript>

        @Html.Partial("NavPartial")
		
        <div id="subwrap">
            @{/* HACK: notificationmessage doesn't work on About page, only pushes jumbotron down and it looks weird, so we just don't show it there. */}
            @if (System.Configuration.ConfigurationManager.AppSettings["NotificationMessageEnabled"] == "true" && (ViewBag.curPage == null || ViewBag.curPage != "About"))
            {
		<div id="system-message" style="margin-top: -17px; padding-bottom: 16px;">@Legato.Helpers.HtmlUtilities.RenderHtmlInRazor(Server.HtmlDecode(System.Configuration.ConfigurationManager.AppSettings["CurrentNotificationMessage"]))</div>
            }
            @RenderSection("BetweenHeaderAndContent",false)
  
            <div class="container" id="main">
            @RenderBody()
            <div class="ac">
                <script type="text/javascript"><!--
                    google_ad_client = "ca-pub-0915313029680949";
                    /* Legato page-bottom banner */
                    google_ad_slot = "1362984618";
                    google_ad_width = 468;
                    google_ad_height = 60;
                    //-->
                                </script>
                <script type="text/javascript"
                    src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
                </script>
            </div>
        </div>
        </div>
        <div class="push"></div> <!-- sticky footer -->
    </div> <!-- /wrap -->
    <footer id="footer">
            <div class="container">
                <div class="row">
			        <div class="span7">
				        <p class="copyright muted credit">&copy; @DateTime.Now.Year Legato Network. All Rights Reserved. <small style="font-size: 12px;">Revision @(ViewBag.revNum).</small></p>
                        <p class="text-success" style="font-size:14px;"><span class="label label-success">New!</span> <strong><a href="http://eepurl.com/y-meX" class="text-success" title="Subscribe to the Legato Network Newsletter">Join the Legato mailing list!</a></strong></p>
			        </div>
			        <div class="span5 pull-right foot-social-buttons">
				        @Html.Partial("SocialButtons")
				    </div>
			    </div>
                
		    </div>
	</footer>

