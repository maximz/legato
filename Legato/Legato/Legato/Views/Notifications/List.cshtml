@model IEnumerable<Legato.Models.Notification>

@{
	ViewBag.Title = "Notifications";
}

<section id="content">
<div class="page-header">
		<h1>Notifications <small>new events and changes</small></h1>
	</div>
	<div id="notifications">

@foreach (var item in Model) {
	<div class="notification row">
		<div class="span4">
			<span class="timeago" title="@Html.DisplayFor(modelItem => item.Date)">@Html.DisplayFor(modelItem => item.Date)</span>
		</div>
		<div class="span10">
			@if (item.IsUnread)
			{
				<span class="label success">New</span>
			}
			@Html.ActionLink(item.GlobalPostID1.Title,item.GlobalPostID1.DetailsRoute)
		</div>
	</div>
}

</div>
</section>